/* pages/personal/personal.wxss */
.personal{
  width: 100%;
  background: #f7f7f7;
}
.banner{
  height: 300rpx;
  background: #ffffff;
  border-top: 1rpx solid #dddddd;
  padding: 20rpx;
  box-sizing: border-box;
}
.headContain{
  width: 100%;
  height: 100%;
  background:linear-gradient(to right, #ec3e3d , #ff7358);
  border-radius: 10rpx;
  display: flex;
}

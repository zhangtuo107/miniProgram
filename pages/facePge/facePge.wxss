/* pages/facePge/facePge.wxss */
.facePage{
  width: 100%;
  background: #f7f7f7;
}
.banner{
  height:300rpx;
  background: blue;
}
.slide-image{
  width: 100%;
  height: 100%;
  background: red;
}
.searchInput{
  width: 500rpx;
  height: 60rpx;
  background: #eef5e3; 
  opacity: 0.5;
  border-radius: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  margin: auto
}
.searchInput input{
  box-sizing: border-box;
  padding-left: 40rpx;
  color: #211f16;
  height: 60rpx;
  line-height: 60rpx;
}
.firstMenu{
  height: 300rpx;
  background: #ffffff;
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;
  position: relative;
  top: -20rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  font-size: 14px;
  color: #656565;
  text-align: center;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
  justify-content: space-around;
  align-items: center;
}
.firstMenu view{
  display: inline-block;
  width: 120rpx;
  box-sizing: border-box;
}
.goodsTitle{
  white-space: nowrap;
  overflow: hidden;
}
.menuImg{
  width: 60rpx;
  height:60rpx;
  display: block;
  margin: 0 auto;
}
.secondMenu{
  height: 400rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  font-size: 14px;
  color: #656565;
  border-bottom: 1rpx solid #eeeeee;
}
.bigTitle{
  font-size: 16px;
  font-weight: 700;
  color: #383838;
  float: left;
}
.smallTitle{
  font-size: 14px;
  color: #9b9b9b;
  float: right;
}
.secondBinner{
  width: 100%;
  margin-top: 80rpx;
  /* display: flex; */
}
.secondBinner swiper-item{
  text-align: center; 
}
.secondImg{
  width: 100rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 16rpx;
}
.itemPrice{
  color: #cdcdcd;
  text-decoration: line-through;
}
.secKill{
  height: 400rpx;
  box-sizing: border-box;
  display: flex;
  background: #ffffff;
}
.secLeft{
  width: 300rpx;
  box-sizing: border-box;
  padding: 20rpx 0 0 40rpx;
  border-right: 1rpx solid #f0f0f0;
}
.secLeftTitle{
  color: #323232;
  font-size: 16px;
  font-weight: 700;
  display: block;
}
.secLeftSmallTitle{
  color: #999999;
  font-size: 14px;
}
.secMiddle{
  width: 200rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  border-right: 1rpx solid #f0f0f0;
}
.secRight{
  width: 260rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
}
.leftBox{
  margin-top: 20rpx;
  display: flex
}
.boxItem{
  width: 120rpx;
  text-align: center;
}
.secImg{
  width: 120rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
}
.secPrice{
  font-size: 12px;
  color: #cccccc;
}
.goodImg{
  margin-top: 40rpx;
  width: 120rpx;
  height: 200rpx;
  display: block;
}